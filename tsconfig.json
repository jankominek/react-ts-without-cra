{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["DOM", "DOM.Iterable"],
    "module": "es6",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./dist/",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
